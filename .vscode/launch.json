    "version": "2.0.0",
    "configurations": [
        {
            "name": "TourGuideBot-tg",
            "type": "python",
            "request": "launch",
            "module": "tour_guide_bot.cli",
            "justMyCode": false,
            "args": [
                "-g",
                "${input:botToken}",
                "-d",
                "--db",
                "sqlite+aiosqlite:///${workspaceFolder}/tour_guide_bot.sqlite3",
                "--enabled-languages",
                "${input:languages}"
            ],
        },
        {
            "name": "DB migration",
            "type": "python",
            "request": "launch",
            "module": "alembic",
            "justMyCode": true,
            "args": [
                "-x",
                "db=sqlite:///${workspaceFolder}/tour_guide_bot.sqlite3",
                "upgrade",
                "head"
            ],
        }
    ],
    "inputs": [
        {
            "id": "languages",
            "type": "promptString",
            "description": "Please enter available languages for your bot",
            "default": "en,ru"
        },
        {
            "id": "botToken",
            "type": "promptString",
            "description": "Please enter the token for your bot"
        }
    ]
}
